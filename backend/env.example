PORT=3000
NODE_ENV=development
DATABASE_URL=mongodb://localhost:27017/pstudios
JWT_SECRET=your_jwt_secret_here
CLIENT_ORIGIN=http://localhost:3000
UPLOAD_DIR=./uploads

# Discord Bot Integration
# API key for Discord bot to post announcements to website
# Generate a secure random key (at least 32 characters)
DISCORD_BOT_API_KEY=your_secure_random_api_key_here

# Email Configuration
# Option 1: Gmail (recommended for development)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="Paradigm Studios" <your-email@gmail.com>

# Option 2: Custom SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password