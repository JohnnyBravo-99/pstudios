# Cache Control Headers for Netlify/Vercel
# Optimizes font loading and caching

# Font files - Long-term caching with immutable (updated paths)
/fonts/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/fonts/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Legacy font paths for compatibility
/static/media/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/static/media/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Static assets - Long-term caching
/static/css/*.css
  Cache-Control: public, max-age=31536000, immutable

/static/js/*.js
  Cache-Control: public, max-age=31536000, immutable

# Images and videos
/static/media/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.mp4
  Cache-Control: public, max-age=31536000, immutable

# HTML - Short caching for updates
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Root HTML
/index.html
  Cache-Control: public, max-age=0, must-revalidate
  Link: </static/media/Beckan Regular.woff2>; rel=preload; as=font; type=font/woff2; crossorigin=anonymous
  Link: </static/media/Beckan Oblique.woff2>; rel=preload; as=font; type=font/woff2; crossorigin=anonymous

