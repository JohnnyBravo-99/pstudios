# Apache Configuration for Font Optimization
# Use this if deploying to Apache server

<IfModule mod_headers.c>
  # CORS for fonts
  <FilesMatch "\.(woff2|woff|ttf|eot)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>

  # Cache control for fonts
  <FilesMatch "\.(woff2|woff)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Preload fonts
  <FilesMatch "\.html$">
    Header add Link "</static/media/Beckan Regular.woff2>; rel=preload; as=font; type=font/woff2; crossorigin=anonymous"
    Header add Link "</static/media/Beckan Oblique.woff2>; rel=preload; as=font; type=font/woff2; crossorigin=anonymous"
  </FilesMatch>
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/css text/javascript application/javascript
  AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# Prevent font MIME type issues
<IfModule mod_mime.c>
  AddType font/woff2 .woff2
  AddType font/woff .woff
  AddType font/ttf .ttf
</IfModule>

